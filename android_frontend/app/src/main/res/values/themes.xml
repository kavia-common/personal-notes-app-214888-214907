<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App theme using Material3 DayNight to support dark mode -->
    <style name="Theme.OceanProfessional" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Monochrome Material color roles -->
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/ocean_secondary</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorError">@color/ocean_error</item>
        <item name="colorOnError">@android:color/white</item>

        <!-- Surfaces and backgrounds -->
        <item name="colorSurface">@color/ocean_surface</item>
        <item name="colorOnSurface">@color/ocean_text</item>
        <item name="android:windowBackground">@color/ocean_background</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Component defaults -->
        <item name="materialCardViewStyle">@style/OceanCard</item>
        <item name="toolbarStyle">@style/OceanToolbar</item>
    </style>

    <style name="OceanCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="OceanToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/ocean_surface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurface</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
    </style>
</resources>
