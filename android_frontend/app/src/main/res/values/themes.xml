<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.OceanProfessional" parent="Theme.Material3.Light.NoActionBar">
        <!-- Material color roles -->
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/ocean_secondary</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorError">@color/ocean_error</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorSurface">@color/ocean_surface</item>
        <item name="colorOnSurface">@color/ocean_text</item>
        <item name="colorBackground">@color/ocean_background</item>
        <item name="colorOnBackground">@color/ocean_text</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowBackground">@color/ocean_background</item>

        <!-- Components -->
        <item name="materialCardViewStyle">@style/OceanCard</item>
        <item name="toolbarStyle">@style/OceanToolbar</item>
    </style>

    <style name="OceanCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="OceanToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/ocean_surface</item>
        <item name="titleTextColor">@color/ocean_text</item>
        <item name="subtitleTextColor">@color/ocean_text_secondary</item>
        <item name="navigationIconTint">@color/ocean_text</item>
    </style>
</resources>
